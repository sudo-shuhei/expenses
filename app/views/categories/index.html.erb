<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>

<% @categories.each do |category| %>
    <%= category.name %>
    <% if category.id > 16 %>
      <%= link_to "編集", "/categories/edit/#{category.id}" %>
      <%= link_to "削除", "/categories/#{category.id}", method: :delete %>
    <% end %>
    <br>
<% end %>

